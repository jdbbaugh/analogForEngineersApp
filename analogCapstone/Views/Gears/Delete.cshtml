@model analogCapstone.Models.Gear

@{
    ViewData["Title"] = "Delete";
}

<h1>Probably a bad idea...</h1>

<h3>Are you sure you want to delete this...?</h3>
<p>Any Song/Channel with this gear will forever lose this gear and its settings.</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrdinalsAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrdinalsAvailable)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GearId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Gear</a>
    </form>
</div>
